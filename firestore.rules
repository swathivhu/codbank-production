
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper function to check if a user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Helper function to check if the authenticated user matches the provided UID.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Rules for the 'codusers' collection and its subcollections.
     */
    match /codusers/{userId} {
      // Allow the authenticated owner to read (get, list) and write (create, update, delete)
      // their own profile document.
      allow read, write: if isOwner(userId);

      /**
       * Subcollection for the user's specific bank accounts.
       */
      match /accounts/{accountId} {
        // Inherit the owner check to allow the user full access to their accounts.
        allow read, write: if isOwner(userId);
      }

      /**
       * Subcollection for the user's secure authentication tokens.
       */
      match /userTokens/{tokenId} {
        // Inherit the owner check to allow the user full access to their tokens.
        allow read, write: if isOwner(userId);
      }
    }
  }
}
