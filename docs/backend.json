
{
  "entities": {
    "CodUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CodUser",
      "type": "object",
      "description": "Represents a user account within the CodBank banking application.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Unique identifier for the user (matching Firebase Auth UID)."
        },
        "username": {
          "type": "string",
          "description": "Unique username chosen by the user."
        },
        "email": {
          "type": "string",
          "description": "Unique email address of the user.",
          "format": "email"
        },
        "password": {
          "type": "string",
          "description": "Hashed password string."
        },
        "phone": {
          "type": "string",
          "description": "Contact phone number of the user."
        },
        "role": {
          "type": "string",
          "description": "System role of the user.",
          "default": "CUSTOMER",
          "enum": ["CUSTOMER", "ADMIN"]
        },
        "balance": {
          "type": "number",
          "description": "Current total aggregated balance in USD.",
          "default": 100000
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of account creation.",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "username",
        "email",
        "password",
        "role",
        "balance",
        "createdAt"
      ]
    },
    "Account": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Account",
      "type": "object",
      "description": "Represents a specific financial account (Savings/Checking) owned by a user.",
      "properties": {
        "accountNumber": {
          "type": "string",
          "description": "Unique 10-digit account number."
        },
        "accountType": {
          "type": "string",
          "enum": ["Savings", "Current"]
        },
        "balance": {
          "type": "number",
          "description": "Current balance of this specific account."
        },
        "status": {
          "type": "string",
          "default": "ACTIVE"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["accountNumber", "accountType", "balance", "status", "createdAt"]
    },
    "UserToken": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserToken",
      "type": "object",
      "description": "Represents a secure authentication token for a specific user session.",
      "properties": {
        "tokenId": {
          "type": "string",
          "description": "Unique identifier for the token document."
        },
        "token": {
          "type": "string",
          "description": "The actual token string value."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the owner's CodUser userId."
        },
        "expiry": {
          "type": "string",
          "description": "ISO 8601 timestamp for token expiration.",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of token generation.",
          "format": "date-time"
        }
      },
      "required": [
        "tokenId",
        "token",
        "userId",
        "expiry",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/codusers/{userId}",
        "definition": {
          "entityName": "CodUser",
          "schema": {
            "$ref": "#/backend/entities/CodUser"
          },
          "description": "Main collection for user profiles."
        }
      },
      {
        "path": "/codusers/{userId}/accounts/{accountId}",
        "definition": {
          "entityName": "Account",
          "schema": {
            "$ref": "#/backend/entities/Account"
          },
          "description": "Subcollection for specific bank accounts owned by the user."
        }
      },
      {
        "path": "/codusers/{userId}/userTokens/{tokenId}",
        "definition": {
          "entityName": "UserToken",
          "schema": {
            "$ref": "#/backend/entities/UserToken"
          },
          "description": "Subcollection for user-specific tokens. Nested for path-based security."
        }
      }
    ]
  }
}
