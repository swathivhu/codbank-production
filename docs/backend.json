
{
  "entities": {
    "CodUser": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "CodUser",
      "type": "object",
      "description": "Represents a user account within the CodBank banking application.",
      "properties": {
        "userId": {
          "type": "string",
          "description": "Unique identifier for the user (matching Firebase Auth UID)."
        },
        "username": {
          "type": "string",
          "description": "Unique username chosen by the user."
        },
        "email": {
          "type": "string",
          "description": "Unique email address of the user.",
          "format": "email"
        },
        "password": {
          "type": "string",
          "description": "Hashed password string."
        },
        "phone": {
          "type": "string",
          "description": "Contact phone number of the user."
        },
        "role": {
          "type": "string",
          "description": "System role of the user.",
          "default": "CUSTOMER",
          "enum": ["CUSTOMER", "ADMIN"]
        },
        "balance": {
          "type": "number",
          "description": "Current account balance in USD.",
          "default": 100000
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of account creation.",
          "format": "date-time"
        }
      },
      "required": [
        "userId",
        "username",
        "email",
        "password",
        "role",
        "balance",
        "createdAt"
      ]
    },
    "UserToken": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserToken",
      "type": "object",
      "description": "Represents a secure authentication token for a specific user session.",
      "properties": {
        "tokenId": {
          "type": "string",
          "description": "Unique identifier for the token document."
        },
        "token": {
          "type": "string",
          "description": "The actual token string value."
        },
        "userId": {
          "type": "string",
          "description": "Reference to the owner's CodUser userId."
        },
        "expiry": {
          "type": "string",
          "description": "ISO 8601 timestamp for token expiration.",
          "format": "date-time"
        },
        "createdAt": {
          "type": "string",
          "description": "ISO 8601 timestamp of token generation.",
          "format": "date-time"
        }
      },
      "required": [
        "tokenId",
        "token",
        "userId",
        "expiry",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/codusers/{userId}",
        "definition": {
          "entityName": "CodUser",
          "schema": {
            "$ref": "#/backend/entities/CodUser"
          },
          "description": "Main collection for user profiles."
        }
      },
      {
        "path": "/codusers/{userId}/userTokens/{tokenId}",
        "definition": {
          "entityName": "UserToken",
          "schema": {
            "$ref": "#/backend/entities/UserToken"
          },
          "description": "Subcollection for user-specific tokens. Nested for path-based security."
        }
      }
    ],
    "reasoning": "The structure uses a nested subcollection for tokens. This is a Firestore best practice for user-owned data because it allows for simple path-based security rules (ensuring a user can only see their own tokens) without needing expensive cross-document lookups."
  }
}
